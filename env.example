# Environment configuration for Lovable + Supabase
# Copy this to .env.local for local development

# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_PUBLISHABLE_KEY=your_supabase_anon_key

# Backend API Configuration
VITE_API_URL=http://localhost:3000
VITE_MONETIZATION_API_URL=http://localhost:8001

# Senegal-Specific Configuration
VITE_DEFAULT_LANGUAGE=fr
VITE_SUPPORTED_LANGUAGES=fr,wo,en
VITE_DEFAULT_COUNTRY=SN

# Wave Mobile Money Configuration
VITE_WAVE_API_KEY=your_wave_api_key
VITE_WAVE_SECRET_KEY=your_wave_secret_key
VITE_WAVE_BASE_URL=https://api.wave.com/v1

# Lightning Network Configuration
VITE_LND_GRPC_HOST=localhost:10009
VITE_LND_MACAROON_PATH=/path/to/admin.macaroon
VITE_LND_TLS_CERT_PATH=/path/to/tls.cert

# Exchange Rate Configuration
VITE_FALLBACK_BTC_XOF_RATE=8000000
VITE_EXCHANGE_RATE_PROVIDER=coingecko

# Feature Flags
VITE_ENABLE_WAVE_CASHOUT=true
VITE_ENABLE_USSD=true
VITE_ENABLE_MULTI_LANGUAGE=true
VITE_ENABLE_COMMUNITY_FUND=true

# Development Configuration
VITE_NODE_ENV=development
VITE_DEBUG_MODE=true
VITE_MOCK_LIGHTNING=true
