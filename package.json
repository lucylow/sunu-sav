{
  "name": "tontine-bitcoin-app",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "dev": "NODE_ENV=development tsx watch server/_core/index.ts",
    "build": "vite build && esbuild server/_core/index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist",
    "build:dev": "vite build --mode development",
    "start-server": "NODE_ENV=production node dist/index.js",
    "check": "tsc --noEmit",
    "format": "prettier --write .",
    "db:push": "drizzle-kit generate && drizzle-kit migrate",
    "i18n:extract": "i18next-scanner --config scripts/i18next-scanner.config.js",
    "i18n:export": "node scripts/export-translations.js",
    "i18n:check": "node scripts/check-translations.js",
    "demo": "bash scripts/demo-setup.sh",
    "demo:reset": "pnpm db:push --force && node scripts/seed-demo-data.js",
    "demo:test": "bash scripts/test-happy-path.sh",
    "ai:start": "docker-compose -f docker-compose.ai.yml up -d",
    "ai:stop": "docker-compose -f docker-compose.ai.yml down",
    "ai:logs": "docker-compose -f docker-compose.ai.yml logs -f",
    "ai:workers": "concurrently \"node server/_core/workers/creditWorker.js\" \"node server/_core/workers/fraudWorker.js\" \"node server/_core/workers/notificationWorker.js\"",
    "seed:users": "node backend/scripts/seed_mock_users.js",
    "seed:activity": "node backend/scripts/generate_mock_activity.js",
    "seed:all": "npm run seed:users && npm run seed:activity",
    "db:seed": "psql $DATABASE_URL -f migrations/seed_mock_users.sql"
  },
