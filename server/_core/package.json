{
  "name": "sunu-sav-backend",
  "version": "1.0.0",
  "description": "Backend API for SunuSàv Tontine Bitcoin Platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "migrate": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "migrate:make": "knex migrate:make",
    "seed": "knex seed:run",
    "db:create": "knex migrate:latest",
    "db:reset": "knex migrate:rollback --all && knex migrate:latest && knex seed:run",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "docker:build": "docker build -t sunu-sav-backend .",
    "docker:run": "docker run -p 3000:3000 sunu-sav-backend"
  },
  "dependencies": {
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "knex": "^3.0.1",
    "pg": "^8.11.3",
    "objection": "^3.1.0",
    "joi": "^17.11.0",
    "uuid": "^9.0.1",
    "crypto": "^1.0.1",
    "node-cron": "^3.0.3",
    "dotenv": "^16.3.1",
    "js-yaml": "^4.1.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.6",
    "nodemailer": "^6.9.7",
    "twilio": "^4.19.0",
    "aws-sdk": "^2.1490.0",
    "redis": "^4.6.10",
    "bull": "^4.12.2",
    "socket.io": "^4.7.4",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "@types/jest": "^29.5.8",
    "jest-environment-node": "^29.7.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "tontine",
    "bitcoin",
    "lightning",
    "savings",
    "senegal",
    "fintech",
    "api"
  ],
  "author": "SunuSàv Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lucylow/sunu-sav"
  },
  "bugs": {
    "url": "https://github.com/lucylow/sunu-sav/issues"
  },
  "homepage": "https://github.com/lucylow/sunu-sav#readme"
}
