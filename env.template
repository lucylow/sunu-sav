# SunuSàv Environment Variables Template
# Copy this file to .env and fill in your values

# Database (Required)
DATABASE_URL=mysql://root@localhost:3306/sunusav

# Authentication (Manus OAuth - auto-injected)
JWT_SECRET=auto-injected
OAUTH_SERVER_URL=auto-injected
VITE_OAUTH_PORTAL_URL=auto-injected

# Lightning Network (LND) - Required for Bitcoin functionality
LND_REST_URL=https://testnet.lnd.yournode.com:8080
LND_MACAROON_HEX=your_macaroon_hex_here
LND_NETWORK=testnet

# App Configuration
VITE_APP_TITLE=SunuSàv - Our Savings, Our Future
VITE_APP_LOGO=/logo.png
NODE_ENV=development
PORT=3000

# Lovable Specific
VITE_API_URL=http://localhost:3000
VITE_APP_NAME=SunuSàv
VITE_APP_VERSION=1.0.0

# Optional: Redis for caching (falls back to in-memory)
REDIS_URL=redis://localhost:6379

# Optional: Mobile Money APIs (uses mock service by default)
WAVE_API_KEY=your-wave-api-key
ORANGE_MONEY_API_KEY=your-orange-money-api-key
FREE_MONEY_API_KEY=your-free-money-api-key

# Optional: AI Services (uses mock AI by default)
AI_CREDIT_SERVICE_URL=http://localhost:8001
AI_FRAUD_SERVICE_URL=http://localhost:8002
AI_INSIGHTS_SERVICE_URL=http://localhost:8003
AI_ROUTING_SERVICE_URL=http://localhost:8004

# Security (Optional - uses default values for demo)
WEBHOOK_SECRET=your-webhook-secret-for-lightning-payments
FERNET_KEY=your-fernet-encryption-key-for-pii-data
AUDIT_KEY_PATH=./certs/audit.pem
