# Environment Configuration for SunuSÃ v Lightning Backend
# Copy this to .env and update with your LND node details

# LND Connection Settings
LND_REST_URL=https://127.0.0.1:8080
LND_MACAROON_PATH=/etc/lnd/data/chain/bitcoin/testnet/admin.macaroon
LND_TLS_CERT_PATH=/etc/lnd/tls.cert

# Alternative: Use hex macaroon (not recommended for production)
# LND_MACAROON_HEX=your_macaroon_hex_here

# LND Request Settings
LND_REQUEST_TIMEOUT=60
LND_DEFAULT_FEE_LIMIT_SAT=10

# Database Settings
DATABASE_URL=postgresql://tontine_user:tontine_password@localhost:5432/tontine

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_BASE_URL=http://localhost:8000

# Security Settings
JWT_SECRET=your-super-secret-jwt-key-for-development-only
WEBHOOK_SECRET=your-webhook-secret-key

# Development Settings
DEBUG=true
LOG_LEVEL=INFO

# Production Settings (uncomment for production)
# DEBUG=false
# LOG_LEVEL=WARNING
# LND_REST_URL=https://your-lnd-node:8080
# LND_MACAROON_PATH=/run/secrets/lnd/admin.macaroon
# LND_TLS_CERT_PATH=/run/secrets/lnd/tls.cert
